/dts-v1/;
/plugin/;

#include <dt-bindings/board/am335x-bbw-bbb-base.h>
#include <dt-bindings/pinctrl/am33xx.h>

/ {
	compatible = "ti,beaglebone", "ti,beaglebone-black", "ti,beaglebone-green";

	// identification
	part-number = "gpio-wakeup";
	version = "00A0";

	// the resources this cape uses.
	exclusive-use =
		"P9.42";		// uart3_txd

	/*
	 * Free up the pins used by the cape from the pinmux helpers.
	 */
	fragment@0 {
		target = <&ocp>;
		__overlay__ {
			P9_42_pinmux { status = "disabled"; };	/* P9_42: gpio0_7 */
		};
	};

	fragment@1 {
		target = <&am33xx_pinmux>;
		__overlay__ {
			bb_wakeup_pins: pinmux_bb_wakeup_pins {
				pinctrl-single,pins = <
					BONE_P9_42A (SLEWCTRL_SLOW | PIN_INPUT | MUX_MODE7)	/* P9_42: gpio0_7  */
				>;
			};
		};
	};

	fragment@2 {
		target-path="/";
		__overlay__ {
			gpio_keys {
				compatible = "gpio-keys";
				pinctrl-names = "default";
				pinctrl-0 = <&bb_wakeup_pins>;

				power1 {
					label = "power1";
					gpios = <&gpio0 7 0>;
					linux,code = <143>; /* System Wake Up */
					gpio-key,wakeup;
				};
			};
                   };
        };

};

